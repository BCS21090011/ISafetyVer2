<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISafetyVer2.Views.SubCategoryPage"
             Title="SubCategoryPage">
    <StackLayout Padding="20">
        <Picker x:Name="CategoryPicker" Title="Select Category"/>
        <Entry x:Name="SubCatNameEntry" Placeholder="Sub Category Name"/>
        <Entry x:Name="AreaRadiusEntry" Keyboard="Numeric" TextChanged="EntryEnsureInt" Placeholder="Area Radius"/>
        <Entry x:Name="DangerLvlEntry" Keyboard="Numeric" TextChanged="EntryEnsureInt" Placeholder="Danger Level"/>
        <Button Text="Add SubCategory" Clicked="AddSubCategoryBtnOnClick"/>
    </StackLayout>
</ContentPage>