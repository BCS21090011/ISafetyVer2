<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISafetyVer2.Views.SafetyTipsCategoriesPage"
             Title="SafetyTipsCategoriesPage">

    <CollectionView ItemsSource="{Binding Categories}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="20" RowDefinitions="Auto" ColumnDefinitions="25,*,25,Auto">
                    <Image Source="back.png" WidthRequest="25" HeightRequest="25"/>
                    <Label Grid.Column="1" Text="{Binding CategoryName}" FontSize="20" FontAttributes="Bold"/>
                    <Image Source="next.png" Grid.Column="2" WidthRequest="25" HeightRequest="25"/>
                    <Button Grid.Column="3" Text="Go" Command="{Binding Path=BindingContext.CategoryOnClicked, Source={RelativeSource AncestorType={x:Type ContentPage}}}" CommandParameter="{Binding CategoryID}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>